# ===========================================
# JOYTIFY BACKEND ENVIRONMENT CONFIGURATION
# ===========================================

# Application Configuration
NODE_ENV=development
USE_NGINX_PROXY=false
BACKEND_PORT=5000
ORIGIN_APP=http://localhost:3000

# Database Configuration
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/joytify-dev

# Email Service Configuration
RESEND_API_KEY=your_resend_api_key_here
TEST_EMAIL=test@example.com
SENDER_EMAIL=noreply@joytify.com

# API Rate Limiting
SEND_LIMIT_PER_PERIOD=100
PROFILE_FETCH_LIMIT=50
FETCH_LIMIT_PER_PAGE=20

# JWT Security Keys
ACCESS_SECRET_KEY=your_access_secret_key_here
REFRESH_SECRET_KEY=your_refresh_secret_key_here
VERIFICATION_SECRET_KEY=your_verification_secret_key_here
USER_PREFERENCE_SECRET_KEY=your_user_preference_secret_key_here

# API Security
INTERNAL_API_KEY=your_internal_api_key_here
ADMIN_API_KEY=your_admin_api_key_here

# AWS Configuration
AWS_REGION=ap-northeast-1
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_SDK_JS_SUPPRESS_MAINTENANCE_MODE_MESSAGE=1

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_firebase_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_firebase_client_id

# External Services
IP2LOCATION_KEY=your_ip2location_api_key

# Application Settings
SESSION_THRESHOLD=300000
MIN_RATING_PROMPT_THRESHOLD=3
MAX_RATING_PROMPT_THRESHOLD=10

# ===========================================
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. Never commit the actual .env file to version control
# ===========================================